<p style="color: green"><%= notice %></p>
<div class="information-block">
  <div id="rsvps">
        <table>
          <tr>
            <th class="cookies">Name</th>
            <th class="cookies">Dietry Req.</th>
            <th class="cookies">Accomodation</th>
            <th class="cookies"> </th>

          </tr>
          <% Rsvp.all.each do |form| %>
            <tr>
              <td class="cookies"><%= form.name %></td>
              <td class="cookies"><%= form.food_requests %></td>
              <td class="cookies"><%= form.accomodation %></td>
              <td class="cookies"><%= link_to "Edit information", edit_rsvp_path(form) %></td>
            </tr>
          <% end %><br>
        </table>
  </div><br>

<%= render "form" %>
</div>
